{
  "header": {
    "blocks": [
      "header-layout.desktop",
      "header-layout.mobile"
    ]
  },
  "header.full": {
    "blocks": [
      "header-layout.desktop",
      "header-layout.mobile"
    ]
  },
  "header-layout.desktop": {
    "children": [
      "header-row#1-desktop",
      "header-row#2-desktop",
      "header-row#3-desktop",
      "header-row#4-desktop"
    ]
  },

  "header-row#1-desktop": {
    "children": [
      "rich-text#notification.bar"
    ],
    "props": {
      "fullWidth": "true",
      "inverted":"true"
    }
  },
  "rich-text#notification.bar": {
    "props": {
      "text": "**Frete Grátis Brasil** REGRAS AQUI | Motoboy São Paulo",
      "textColor": "c-on-emphasis",
      "blockClass":"notification-bar"
    }
  },
  "header-row#2-desktop": {
    "children": [
      "logo#desktop",
      "header-spacer",
      "search-bar",
      "header-spacer",
      "login",
      "minicart"
    ],
    "props": {
      "sticky": true,
      "blockClass": "main-header"
    }
  },
  "header-row#3-desktop": {
    "children": [
      "vtex.menu@2.x:menu#category-menu"
    ],
    "props": {
      "sticky": true,
      "blockClass": "main-header"
    }
  },
  "header-row#4-desktop": {
    "children": [
      "sandbox#sandbox-ebit"
    ],
    "props": {
      "sticky": true,
      "blockClass": "josiel__ebit"
    }
  },
  "logo#desktop": {
    "props": {
      "title": "Logo",
      "href": "/",
      "url": "https://belavidanatural.vteximg.com.br/arquivos/belavidanatural.png",
      "width": "132"
    }
  },

  "minicart": {
    "blocks": [
      "product-summary"
    ],
    "props": {
      "type": "sidebar",
      "showRemoveButton": true,
      "showDiscount": true,
      "showSku": true,
      "labelMiniCartEmpty": "",
      "labelButtonFinishShopping": "Ir para o Carrinho",
      "enableQuantitySelector": true,
      "maxQuantity": 10,
      "labelClasses": "gray"
    }
  },

  "header-layout.mobile": {
    "children": [
      "header-row#1-mobile",
      "header-row#2-mobile"
    ]
  },
  "header-row#1-mobile": {
    "children": [
      "drawer",
      "logo#mobile",
      "header-spacer",
      "login",
      "minicart"
    ],
    "props": {
      "sticky": true,
      "blockClass": "main-header-mobile"
    }
  },
  "drawer": {
    "children": [
      "vtex.menu@2.x:menu#category-menu-mobile"
    ]
  },

  "logo#mobile": {
    "props": {
      "title": "Logo",
      "href": "/",
      "url": "https://belavidanatural.vteximg.com.br/arquivos/belavidanatural.png",
      "width": "70"
    }
  },
  "header-row#2-mobile": {
    "children": [
      "search-bar"
    ],
    "props": {
      "sticky": true
    }
  },
  "sandbox#sandbox-ebit": {
    "props": {
      "width": "100%",
      "height": "65px",
      "initialContent": "<a target='_blank' href='https://www.ebitempresa.com.br'><img src='https://www.ebitempresa.com.br/bitrate/banners/b1129255.gif'></a><script>let imageEbit = document.getElementsByTagName('img')[0];imageEbit.style.display = 'block';imageEbit.style.margin = '0 auto';imageEbit.style.marginTop = '5px';</script>",
      "allowCookies": true
    }
  }
}